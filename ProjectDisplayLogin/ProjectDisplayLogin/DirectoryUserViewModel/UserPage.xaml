<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectDisplayLogin.DirectoryUserViewModel.UserPage">
    <ContentPage.Content>
        <StackLayout Background="White">
            <Label Text = "Имя" FontSize="Large" />
            <Label x:Name = "LabelFirstName"></Label>
            <Label Text = "Фамилия" FontSize = "Large" />
            <Label x:Name = "LabelSecondName"></Label>
            <Label Text = "Отчество" FontSize = "Large" />
            <Label x:Name = "LabelLastName"></Label>
            <Button Text="Расписание" Clicked="Graphik"></Button>
            <Button Text="Exit" Clicked="ExitButtonClicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>